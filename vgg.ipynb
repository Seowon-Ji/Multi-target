def normalize_vgg(x):
    rgb_mean = torch.tensor([0.485, 0.456, 0.406]).cuda().view(1, 3, 1, 1)
    rgb_std = torch.tensor([0.229, 0.224, 0.225]).cuda().view(1, 3, 1, 1)
    y = (x - rgb_mean) / rgb_std
    return y


